{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "padding": {
    "top": 20,
    "left": 5,
    "right": 5,
    "bottom": 5
  },
  "width": 1000,
  "height": 800,
  "params": [
    {
      "name": "zoom_level",
      "value": 35000,
      "bind": {
        "input": "range",
        "min": 35000,
        "max": 80000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_longitude",
      "value": 145.1,
      "bind": {
        "input": "range",
        "min": 144.9,
        "max": 145.25,
        "step": 0.01,
        "name": "Center Longitude (Left - Right): "
      }
    },
    {
      "name": "center_latitude",
      "value": -37.95,
      "bind": {
        "input": "range",
        "min": -38.2,
        "max": -37.8,
        "step": 0.01,
        "name": "Center Latitude (Up - Down): "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": {
      "expr": "[center_longitude, center_latitude]"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JhonnyMonash/Week9Homework/main/data/MelbGeelongLGAtopojson.json",
        "format": {
          "type": "topojson",
          "feature": "VICLGAgeojson"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#b6b6b6",
        "stroke": "#ffffff",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JhonnyMonash/Week10Homework/refs/heads/main/data/Annual_Metropolitan_Train_Station_Entries_2023-24.csv"
      },
      "transform": [
        {
          "calculate": "split(datum.Line, /,\\s*/)",
          "as": "LineArray"
        },
        {
          "flatten": [
            "LineArray"
          ]
        }
      ],
      "selection": {
        "line_selection": {
          "type": "multi",
          "fields": [
            "LineArray"
          ],
          "bind": "legend"
        }
      },
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {
          "field": "Stop_long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Stop_lat",
          "type": "quantitative"
        },
        "size": {
          "field": "Pax_annual",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "range": [
              1,
              500
            ]
          },
          "legend": {
            "title": "Annual Passengers"
          }
        },
        "color": {
          "field": "LineArray",
          "type": "nominal",
          "legend": {
            "title": "Train Lines"
          }
        },
        "opacity": {
          "condition": {
            "selection": "line_selection",
            "value": 1
          },
          "value": 0.1
        },
        "tooltip": [
          {
            "field": "Stop_name",
            "type": "nominal",
            "title": "Stop Name"
          },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Annual Passengers",
            "format": ",d"
          },
          {
            "field": "Line",
            "type": "nominal",
            "title": "Train Lines Served"
          }
        ]
      }
    }
  ]
}