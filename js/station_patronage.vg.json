{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "padding": {
    "top": 20,
    "left": 5,
    "right": 5,
    "bottom": 5
  },
  "width": 800,
  "height": 800,
  "params": [
    {
      "name": "zoom_level",
      "value": 35000,
      "bind": {
        "input": "range",
        "min": 35000,
        "max": 80000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_longitude",
      "value": 145.1,
      "bind": {
        "input": "range",
        "min": 144.9,
        "max": 145.25,
        "step": 0.01,
        "name": "Center Longitude (Left - Right): "
      }
    },
    {
      "name": "center_latitude",
      "value": -37.95,
      "bind": {
        "input": "range",
        "min": -38.2,
        "max": -37.8,
        "step": 0.01,
        "name": "Center Latitude (Up - Down): "
      }
    },
    {
      "name": "line2_Alamein",
      "value": true
    },
    {
      "name": "line2_Belgrave",
      "value": true
    },
    {
      "name": "line2_Craigieburn",
      "value": true
    },
    {
      "name": "line2_City_Loop",
      "value": true
    },
    {
      "name": "line2_Cranbourne",
      "value": true
    },
    {
      "name": "line2_Frankston",
      "value": true
    },
    {
      "name": "line2_Glen_Waverley",
      "value": true
    },
    {
      "name": "line2_Hurstbridge",
      "value": true
    },
    {
      "name": "line2_Lilydale",
      "value": true
    },
    {
      "name": "line2_Mernda",
      "value": true
    },
    {
      "name": "line2_Pakenham",
      "value": true
    },
    {
      "name": "line2_Sandringham",
      "value": true
    },
    {
      "name": "line2_Sunbury",
      "value": true
    },
    {
      "name": "line2_Upfield",
      "value": true
    },
    {
      "name": "line2_Werribee",
      "value": true
    },
    {
      "name": "line2_Williamstown",
      "value": true
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {
      "expr": "[center_longitude, center_latitude]"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JhonnyMonash/Week9Homework/main/data/MelbGeelongLGAtopojson.json",
        "format": {
          "type": "topojson",
          "feature": "VICLGAgeojson"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#b6b6b6",
        "stroke": "#ffffff",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JhonnyMonash/Week10Homework/refs/heads/main/data/Annual_Metropolitan_Train_Station_Entries_2023-24.csv"
      },
      "transform": [
        {
          "calculate": "(zoom_level * zoom_level) / 42000000",
          "as": "circle_size"
        },
        {
          "calculate": "split(datum.Line, /,\\s*/)",
          "as": "LineArray"
        },
        {
          "flatten": [
            "LineArray"
          ]
        },
        {
          "filter": "(line2_Alamein && datum.LineArray == 'Alamein') || (line2_Belgrave && datum.LineArray == 'Belgrave') || (line2_City_Loop && datum.LineArray == 'City Loop') || (line2_Craigieburn && datum.LineArray == 'Craigieburn') || (line2_Cranbourne && datum.LineArray == 'Cranbourne') || (line2_Frankston && datum.LineArray == 'Frankston') || (line2_Glen_Waverley && datum.LineArray == 'Glen Waverley') || (line2_Hurstbridge && datum.LineArray == 'Hurstbridge') || (line2_Lilydale && datum.LineArray == 'Lilydale') || (line2_Mernda && datum.LineArray == 'Mernda') || (line2_Pakenham && datum.LineArray == 'Pakenham') || (line2_Sandringham && datum.LineArray == 'Sandringham') || (line2_Sunbury && datum.LineArray == 'Sunbury') || (line2_Upfield && datum.LineArray == 'Upfield') || (line2_Werribee && datum.LineArray == 'Werribee') || (line2_Williamstown && datum.LineArray == 'Williamstown')"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.9,
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {
          "field": "Stop_long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Stop_lat",
          "type": "quantitative"
        },
        "size": {
          "field": "circle_size",
          "type": "quantitative",
          "scale": null,
          "legend": null
        },
        "color": {
          "field": "Pax_annual",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "range": [
              "blue",
              "red"
            ]
          },
          "legend": {
            "title": "Ridership (Passengers)",
            "orient": "bottom-right"
          }
        },
        "tooltip": [
          {
            "field": "Stop_name",
            "type": "ordinal",
            "title": "Stop Name"
          },
          {
            "field": "Pax_annual",
            "type": "quantitative",
            "title": "Number of Passengers",
            "format": ",d"
          },
          {
            "field": "Line",
            "type": "ordinal",
            "title": "Train Lines Served"
          }
        ]
      }
    }
  ]
}
